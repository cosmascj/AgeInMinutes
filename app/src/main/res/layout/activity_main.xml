<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="@dimen/root_layout_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/calculate_text_marginTop"
        android:text="@string/cal_age"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize_calculate"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/age_text_marginTop"
        android:text="@string/age"
        android:padding="@dimen/age_text_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_Age"
        android:background="@color/ageTextBackgroundColor"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/in_minutes_marginTop"
        android:text="@string/in_minutes"
        android:textColor="@color/textColor"
        android:textSize="@dimen/textSize_age_in_minutes"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#929292"
        android:text="@string/select_date"
        android:layout_marginTop="@dimen/Button_datePicker_marginTop"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_button_datePicker"/>
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#844046"
        android:layout_marginTop="@dimen/selected_date_marginTop"
        android:textSize="@dimen/textSize_selected_date"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGreyTextColor"
        android:text="@string/selected_date"
        android:textSize="@dimen/textSize_selected_date"/>

    <TextView
        android:id="@+id/tvSelectedDateInMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#844046"
        android:layout_marginTop="@dimen/selected_date_in_minutes_marginTop"
        android:textSize="@dimen/textSize_selected_date_in_minutes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightGreyTextColor"
        android:text="@string/age_in_minutes"
        android:textSize="@dimen/textSize_age_in_minutes"/>


</LinearLayout>