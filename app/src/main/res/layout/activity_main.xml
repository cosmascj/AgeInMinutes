<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/profile_white_shade"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_members_activity"
            android:layout_width="match_parent"
            app:titleTextColor="@color/button_border_color"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:background="@color/profile_white_shade"
    android:outlineAmbientShadowColor="@color/black"
    >





    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/button_border_color"
        android:text="@string/selected_date"
        android:layout_marginTop="@dimen/hello_text_marginTop"
        android:textStyle="bold"
        android:textSize="@dimen/textSize_selected_date"/>

    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/selected_date_marginTop"
        android:textColor="@color/intro_background_color"
        android:textSize="@dimen/textSize_selected_date" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/age_text_marginTop"
        android:layout_marginBottom="@dimen/age_text_marginButton"
        android:text="@string/age"
        android:textAlignment="center"
        android:lineSpacingExtra="1dp"
        android:padding="@dimen/age_text_padding"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_Age"
        android:background="@color/age_design_color"
        android:textStyle="bold" />










    <TextView
        android:id="@+id/tvSelectedDateInMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/intro_background_color"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/selected_date_in_minutes_marginTop"
        android:textSize="@dimen/textSize_selected_date_in_minutes"/>

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textColor="@color/lightGreyTextColor"-->
<!--        android:text="@string/age_in_minutes"-->
<!--        android:textSize="@dimen/textSize_age_in_minutes"/>-->
    </LinearLayout>
</androidx.cardview.widget.CardView>






</LinearLayout>